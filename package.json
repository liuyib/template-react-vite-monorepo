{
  "name": "react-vite-monorepo-template",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "keywords": [],
  "author": "liuyib<https://github.com/liuyib>",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm -r --parallel --filter=./apps/* run dev",
    "start": "pnpm run dev",
    "biome": "biome check --write --no-errors-on-unmatched",
    "prettier": "prettier --write --cache *.{md,yml,yaml} --no-error-on-unmatched-pattern",
    "format": "biome format --write && pnpm run prettier",
    "clean": "npx rimraf ./{apps,packages}/*/{es,lib,dist,node_modules} && npx rimraf node_modules",
    "build": "pnpm -r --filter=icons run build && pnpm -r --filter=ui run build && pnpm -r --filter=react-app run build",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,mjs,json}": [
      "pnpm run biome"
    ],
    "*.{md,yml,yaml}": [
      "pnpm run prettier"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@microsoft/api-extractor": "^7.52.8",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.6.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-svgr": "^4.3.0"
  }
}
